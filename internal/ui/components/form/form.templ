// Helper functions

func getWidthClass(width InputWidth) templ.CSSClass {
	switch width {
	case WidthGrow:
		return inputGrow()
	case WidthPartial:
		return inputPartial()
	case WidthAuto:
		return inputFull() // fallback to full for auto
	default:
		return inputFull()
	}
}

func inputClasses(props InputProps) templ.CSSClasses {
	return templ.CSSClasses{
		inputBase(),
		getWidthClass(props.Width),
		templ.KV(inputMono(), props.Mono),
		templ.KV(inputDisabled(), props.Disabled),
		templ.KV(inputError(), props.Error),
		templ.KV(inputWithIcon(), props.Icon != nil),
		templ.KV(props.Class, props.Class != ""),
	}
}

func getInputType(t string) string {
	if t == "" {
		return "text"
	}
	return t
}

// Label component
templ Label(props LabelProps) {
	<label
		if props.For != "" {
			for={ props.For }
		}
		class={ labelBase(), templ.KV(labelDisabled(), props.Disabled), templ.KV(props.Class, props.Class != "") }
		{ props.Attributes... }
	>
		{ props.Text }
		if props.Required {
			<span class={ labelRequired() } aria-hidden="true">*</span>
		}
	</label>
}

// Checkbox component
templ Checkbox(props CheckboxProps) {
	<label class={ checkboxWrapper(), templ.KV(checkboxDisabled(), props.Disabled), templ.KV(props.Class, props.Class != "") }>
		<input
			type="checkbox"
			if props.ID != "" {
				id={ props.ID }
			}
			if props.Name != "" {
				name={ props.Name }
			}
			if props.Value != "" {
				value={ props.Value }
			}
			class={ checkboxInput() }
			checked?={ props.Checked }
			disabled?={ props.Disabled }
			required?={ props.Required }
			if props.AriaLabel != "" {
				aria-label={ props.AriaLabel }
			}
			if props.AriaDescribedBy != "" {
				aria-describedby={ props.AriaDescribedBy }
			}
			{ props.Attributes... }
		/>
		if props.Label != "" {
			<span class={ checkboxLabel() }>{ props.Label }</span>
		}
		if props.Description != "" {
			<span class={ checkboxDescription() }>{ props.Description }</span>
		}
	</label>
}

