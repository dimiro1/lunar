// Input component with Props
templ Input(props InputProps) {
	if props.Icon != nil {
		<div class={ inputWrapper(), templ.KV(inputWrapperGrow(), props.Width == WidthGrow) }>
			<span class={ inputIcon() } aria-hidden="true">
				@props.Icon
			</span>
			<input
				if props.ID != "" {
					id={ props.ID }
				}
				if props.Name != "" {
					name={ props.Name }
				}
				type={ getInputType(props.Type) }
				if props.Placeholder != "" {
					placeholder={ props.Placeholder }
				}
				if props.Value != "" {
					value={ props.Value }
				}
				class={ inputClasses(props) }
				disabled?={ props.Disabled }
				readonly?={ props.Readonly }
				required?={ props.Required }
				if props.AriaLabel != "" {
					aria-label={ props.AriaLabel }
				}
				if props.AriaDescribedBy != "" {
					aria-describedby={ props.AriaDescribedBy }
				}
				if props.AriaInvalid {
					aria-invalid="true"
				}
				{ props.Attributes... }
			/>
		</div>
	} else {
		<input
			if props.ID != "" {
				id={ props.ID }
			}
			if props.Name != "" {
				name={ props.Name }
			}
			type={ getInputType(props.Type) }
			if props.Placeholder != "" {
				placeholder={ props.Placeholder }
			}
			if props.Value != "" {
				value={ props.Value }
			}
			class={ inputClasses(props) }
			disabled?={ props.Disabled }
			readonly?={ props.Readonly }
			required?={ props.Required }
			if props.AriaLabel != "" {
				aria-label={ props.AriaLabel }
			}
			if props.AriaDescribedBy != "" {
				aria-describedby={ props.AriaDescribedBy }
			}
			if props.AriaInvalid {
				aria-invalid="true"
			}
			{ props.Attributes... }
		/>
	}
}

// PasswordInput component with visibility toggle
templ PasswordInput(props InputProps) {
	<div class={ passwordWrapper(), templ.KV(passwordWrapperGrow(), props.Width == WidthGrow) }>
		<input
			if props.ID != "" {
				id={ props.ID }
			}
			if props.Name != "" {
				name={ props.Name }
			}
			type="password"
			if props.Placeholder != "" {
				placeholder={ props.Placeholder }
			}
			if props.Value != "" {
				value={ props.Value }
			}
			class={ inputBase(), getWidthClass(props.Width), passwordInput(), templ.KV(inputMono(), props.Mono), templ.KV(inputDisabled(), props.Disabled), templ.KV(inputError(), props.Error), templ.KV(props.Class, props.Class != "") }
			disabled?={ props.Disabled }
			readonly?={ props.Readonly }
			required?={ props.Required }
			if props.AriaLabel != "" {
				aria-label={ props.AriaLabel }
			}
			if props.AriaDescribedBy != "" {
				aria-describedby={ props.AriaDescribedBy }
			}
			if props.AriaInvalid {
				aria-invalid="true"
			}
			data-password-input="true"
			{ props.Attributes... }
		/>
		<button type="button" class={ passwordToggle() } onclick="togglePasswordVisibility(this)" title="Show password" data-visible="false">
			<span data-icon-show>@icons.Eye()</span>
			<span data-icon-hide style="display: none;">@icons.EyeSlash()</span>
		</button>
	</div>
	@passwordToggleScript()
}

var passwordToggleScriptHandle = templ.NewOnceHandle()

templ passwordToggleScript() {
	@passwordToggleScriptHandle.Once() {
		<script>
			function togglePasswordVisibility(button) {
				const wrapper = button.closest('div');
				if (!wrapper) return;

				const input = wrapper.querySelector('[data-password-input]');
				if (!input) return;

				const isVisible = button.getAttribute('data-visible') === 'true';
				const showIcon = button.querySelector('[data-icon-show]');
				const hideIcon = button.querySelector('[data-icon-hide]');

				if (isVisible) {
					input.type = 'password';
					button.setAttribute('data-visible', 'false');
					button.setAttribute('title', 'Show password');
					if (showIcon) showIcon.style.display = '';
					if (hideIcon) hideIcon.style.display = 'none';
				} else {
					input.type = 'text';
					button.setAttribute('data-visible', 'true');
					button.setAttribute('title', 'Hide password');
					if (showIcon) showIcon.style.display = 'none';
					if (hideIcon) hideIcon.style.display = '';
				}
			}
		</script>
	}
}

// CopyInput component with copy to clipboard button
templ CopyInput(props InputProps) {
	<div class={ copyWrapper(), templ.KV(copyWrapperGrow(), props.Width == WidthGrow) }>
		<input
			if props.ID != "" {
				id={ props.ID }
			}
			if props.Name != "" {
				name={ props.Name }
			}
			type="text"
			if props.Placeholder != "" {
				placeholder={ props.Placeholder }
			}
			if props.Value != "" {
				value={ props.Value }
			}
			class={ inputBase(), getWidthClass(props.Width), copyInput(), templ.KV(inputMono(), props.Mono), templ.KV(inputDisabled(), props.Disabled), templ.KV(inputError(), props.Error), templ.KV(props.Class, props.Class != "") }
			disabled?={ props.Disabled }
			readonly?={ props.Readonly }
			required?={ props.Required }
			if props.AriaLabel != "" {
				aria-label={ props.AriaLabel }
			}
			if props.AriaDescribedBy != "" {
				aria-describedby={ props.AriaDescribedBy }
			}
			if props.AriaInvalid {
				aria-invalid="true"
			}
			data-copy-input="true"
			{ props.Attributes... }
		/>
		<button type="button" class={ copyButton() } onclick="copyToClipboard(this)" title="Copy to clipboard" aria-label="Copy to clipboard">
			<span data-icon-copy>@icons.Copy()</span>
			<span data-icon-check style="display: none; color: var(--color-success);">@icons.Check()</span>
		</button>
	</div>
	@copyScript()
}

var copyScriptHandle = templ.NewOnceHandle()

templ copyScript() {
	@copyScriptHandle.Once() {
		<script>
			function copyToClipboard(button) {
				const wrapper = button.closest('div');
				if (!wrapper) return;

				const input = wrapper.querySelector('[data-copy-input]');
				if (!input) return;

				const copyIcon = button.querySelector('[data-icon-copy]');
				const checkIcon = button.querySelector('[data-icon-check]');

				navigator.clipboard.writeText(input.value).then(() => {
					// Visual feedback - show checkmark
					button.setAttribute('title', 'Copied!');
					if (copyIcon) copyIcon.style.display = 'none';
					if (checkIcon) checkIcon.style.display = '';

					setTimeout(() => {
						button.setAttribute('title', 'Copy to clipboard');
						if (copyIcon) copyIcon.style.display = '';
						if (checkIcon) checkIcon.style.display = 'none';
					}, 2000);
				}).catch(err => {
					console.error('Failed to copy:', err);
				});
			}
		</script>
	}
}

