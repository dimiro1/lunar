		}
		if props.Rows > 0 {
			rows={ fmt.Sprintf("%d", props.Rows) }
		}
		class={ textareaBase(), templ.KV(inputError(), props.Error), templ.KV(props.Class, props.Class != "") }
		disabled?={ props.Disabled }
		readonly?={ props.Readonly }
		required?={ props.Required }
		if props.AriaLabel != "" {
			aria-label={ props.AriaLabel }
		}
		if props.AriaDescribedBy != "" {
			aria-describedby={ props.AriaDescribedBy }
		}
		if props.AriaInvalid {
			aria-invalid="true"
		}
		{ props.Attributes... }
	>{ props.Value }</textarea>
}

// Legacy convenience function
templ Textarea(placeholder string, value string) {
	@TextareaInput(TextareaProps{
		Placeholder: placeholder,
		Value:       value,
	})
}

// Select component with Props
templ SelectInput(props SelectProps) {
	<select
		if props.ID != "" {
			id={ props.ID }
		}
		if props.Name != "" {
			name={ props.Name }
		}
		class={ selectBase(), templ.KV(props.Class, props.Class != "") }
		disabled?={ props.Disabled }
		required?={ props.Required }
		if props.AriaLabel != "" {
			aria-label={ props.AriaLabel }
		}
		if props.AriaDescribedBy != "" {
			aria-describedby={ props.AriaDescribedBy }
		}
		{ props.Attributes... }
	>
		for _, opt := range props.Options {
			if opt == props.Selected {
				<option selected>{ opt }</option>
			} else {
				<option>{ opt }</option>
			}
		}
	</select>
}

// Legacy convenience function
templ Select(options []string) {
	@SelectInput(SelectProps{
		Options: options,
	})
}
