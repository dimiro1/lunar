// InputSize defines the size variant
type InputSize string

const (
	SizeDefault InputSize = "default"
	SizeSm      InputSize = "sm"
)

// InputWidth defines how the input fills space
type InputWidth string

const (
	WidthFull    InputWidth = "full"
	WidthGrow    InputWidth = "grow"
	WidthPartial InputWidth = "partial"
	WidthAuto    InputWidth = "auto"
)

// InputProps contains configuration for text inputs
type InputProps struct {
	ID          string
	Name        string
	Type        string
	Placeholder string
	Value       string
	Class       string
	Attributes  templ.Attributes

	// Layout
	Width InputWidth
	Mono  bool
	Icon  templ.Component

	// States
	Readonly bool
	Disabled bool
	Required bool
	Error    bool

	// Accessibility
	AriaLabel       string
	AriaDescribedBy string
	AriaInvalid     bool
}

// TextareaProps contains configuration for textareas
type TextareaProps struct {
	ID          string
	Name        string
	Placeholder string
	Value       string
	Class       string
	Attributes  templ.Attributes
	Rows        int

	// States
	Readonly bool
	Disabled bool
	Required bool
	Error    bool

	// Accessibility
	AriaLabel       string
	AriaDescribedBy string
	AriaInvalid     bool
}

// SelectProps contains configuration for selects
type SelectProps struct {
	ID         string
	Name       string
	Options    []string
	Selected   string
	Class      string
	Attributes templ.Attributes

	// States
	Disabled bool
	Required bool

	// Accessibility
	AriaLabel       string
	AriaDescribedBy string
}

// SearchProps contains configuration for search inputs
type SearchProps struct {
	ID          string
	Name        string
	Placeholder string
	Value       string
	Width       string
	FullWidth   bool
	Class       string
	Attributes  templ.Attributes

	// Accessibility
	AriaLabel       string
	AriaDescribedBy string
}

// LabelProps contains configuration for labels
type LabelProps struct {
	For        string
	Text       string
	Required   bool
	Disabled   bool
	Class      string
	Attributes templ.Attributes
}

// CheckboxProps contains configuration for checkboxes
type CheckboxProps struct {
	ID          string
	Name        string
	Value       string
	Label       string
	Description string
	Checked     bool
	Disabled    bool
	Required    bool
	Class       string
	Attributes  templ.Attributes

	// Accessibility
	AriaLabel       string
	AriaDescribedBy string
}

// RadioProps contains configuration for radio buttons
type RadioProps struct {
	ID         string
	Name       string
	Value      string
	Label      string
	Checked    bool
	Disabled   bool
	Required   bool
	Class      string
	Attributes templ.Attributes

	// Accessibility
	AriaLabel       string
	AriaDescribedBy string
}

// HelpTextVariant defines the style of help text
type HelpTextVariant string

const (
	HelpTextDefault HelpTextVariant = "default"
	HelpTextError   HelpTextVariant = "error"
	HelpTextSuccess HelpTextVariant = "success"
)

// HelpTextProps contains configuration for help/error text
type HelpTextProps struct {
	ID      string
	Text    string
	Variant HelpTextVariant
	Class   string
}

// FormGroupProps contains configuration for form groups
type FormGroupProps struct {
	Class string
}


